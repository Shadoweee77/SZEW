<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SZEW_MAUI.Views.LoginPage"
             Title="Zaloguj siÄ™">
    <Grid Padding="50" RowSpacing="5" ColumnSpacing="10" HorizontalOptions="Center" VerticalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label HorizontalOptions="Center" VerticalOptions="Center" Text="Username"/>
        <Entry HorizontalOptions="Fill" VerticalOptions="Center" Grid.Column="1" x:Name="Username" Placeholder="Username" />
        <Label HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="1" Text="Password"/>
        <Entry HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="1" Grid.Column="1" x:Name="Password" Placeholder="Password" IsPassword="True" />
        <Button HorizontalOptions="Fill" VerticalOptions="Fill" Grid.Row="2" Grid.ColumnSpan="2" x:Name="LoginButton" Clicked="LoginButton_Clicked" Text="Login" />
    </Grid>
</ContentPage>