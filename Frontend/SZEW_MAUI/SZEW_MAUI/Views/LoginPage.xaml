<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SZEW_MAUI.Views.LoginPage"
             Title="Zaloguj siÄ™">
    <VerticalStackLayout Padding="10" VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Padding="10">
            <HorizontalStackLayout>
                <Label Text="Username"/>
                <Entry x:Name="Username" Placeholder="Username">
                </Entry>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Password"/>
                <Entry x:Name="Password" Placeholder="Password" IsPassword="True" FontSize="18">
                </Entry>
            </HorizontalStackLayout>
            <Button x:Name="LoginButton" Clicked="LoginButton_Clicked" Text="Login" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>